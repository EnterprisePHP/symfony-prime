<!-- Navigation -->
<nav {% if id|default(false) %}id="{{ id }}" {% endif %}class="navbar{{ inverse|default(false) ? ' navbar-inverse' : ' navbar-default' }}{{ fixedTop|default(false) ? ' navbar-fixed-top' : '' }}{{ staticTop|default(false) ? ' navbar-static-top' : '' }}" role="navigation" style="margin-bottom: 0">
    {% block header %}
        <div class="navbar-header">
            {% block toggle %}
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            {% endblock toggle %}
            {% block brand %}{% endblock brand %}
        </div>
    {% endblock header %}
    {% block menu_container %}
        {% block menu %}{% endblock %}
    {% endblock %}
    {% block side_menu_container %}
        <div class="navbar-default sidebar" role="navigation">
            <div class="sidebar-nav navbar-collapse">
                {% block side_menu %}{% endblock %}
            </div>
        </div>
    {% endblock %}
</nav>
