{% extends "::plain_base.html.twig" %}

{% block title %}Password Reset - {{ parent() }}{% endblock title %}
{% block headline %}Password Reset{% endblock headline %}

{% block panel_size %}6{% endblock panel_size %}
{% block panel_offset_size %}3{% endblock panel_offset_size %}

{% block content %}
    <form role="form" action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset form-horizontal">
        {{ form_widget(form) }}
        <div>
            <input class="btn btn-lg btn-success btn-block" type="submit" value="{{ 'resetting.reset.submit'|trans }}" />
        </div>
    </form>
    <hr>
    <a href="{{ path("fos_user_security_login") }}">Sign In</a> |
    <a href="{{ path("fos_user_registration_register") }}">Register</a>
{% endblock content %}
