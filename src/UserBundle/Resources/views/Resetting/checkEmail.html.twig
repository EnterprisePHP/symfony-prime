{% extends "::plain_base.html.twig" %}

{% block title %}Check your e-mail - {{ parent() }}{% endblock title %}
{% block headline %}Check your e-mail{% endblock headline %}

{% block content %}
    <div class="well">
        {{ 'resetting.check_email'|trans({'%email%': email}) }}
        {% if providerUrl %}
            <a href="{{ providerUrl }}" target="_blank" class="btn btn-default">{{ providerUrl }}</a>
        {% endif %}
    </div>
    <hr>
    <a href="{{ path("fos_user_security_login") }}">Sign In</a> |
    <a href="{{ path("fos_user_registration_register") }}">Register</a> |
    <a href="{{ path("fos_user_resetting_request") }}">Reset Password</a>
{% endblock content %}
