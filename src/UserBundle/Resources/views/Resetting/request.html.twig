{% extends "::plain_base.html.twig" %}

{% block title %}Password Reset - {{ parent() }}{% endblock title %}
{% block headline %}Password Reset{% endblock headline %}

{% block content %}
    {% if invalid_username is defined %}
        <div class="row">
            <div class="col-lg-12">
                <div class="alert alert-danger">
                    {{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}
                </div>
            </div>
        </div>
    {% endif %}
    <form role="form" action="{{ path('fos_user_resetting_send_email') }}" method="post" class="fos_user_resetting_request">
        <fieldset>
            <div class="form-group">
                <input id="username" class="form-control" placeholder="{{ 'resetting.request.username'|trans }}" name="username" type="text" required="required" autofocus>
            </div>
            <div class="form-group">
                <input type="submit" id="_submit" class="btn btn-lg btn-success btn-block" value="{{ 'resetting.request.submit'|trans }}" />
            </div>
        </fieldset>
    </form>
    <hr>
    <a href="{{ path("fos_user_security_login") }}">Sign In</a> |
    <a href="{{ path("fos_user_registration_register") }}">Register</a>
{% endblock content %}
